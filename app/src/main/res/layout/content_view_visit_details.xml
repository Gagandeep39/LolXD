<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".visits.ViewVisitDetailsActivity"
    tools:showIn="@layout/activity_view_visit_details">
    <LinearLayout
        android:layout_width="match_parent"
        android:padding = "@dimen/padding_standard"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:focusable="false"
                android:clickable="false"
                android:id="@+id/editTextJcpId"
                android:hint="JCP ID"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/editTextCustomerId"
                android:focusable="false"
                android:clickable="false"
                android:hint="Customer ID"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>


        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/editTextCustomerName"
                android:focusable="false"
                android:clickable="false"
                android:hint="Customer Name"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:hint="Date"
                android:id="@+id/editTextDate"
                android:focusable="false"
                android:clickable="false"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:hint="Objective"
                android:id="@+id/editTextObjective"
                android:focusable="false"
                android:clickable="false"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>


       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="horizontal"
           android:layout_height="wrap_content">
           <android.support.design.widget.TextInputLayout
               android:layout_weight="1"
               android:layout_width="0sp"
               android:layout_height="wrap_content">
               <android.support.design.widget.TextInputEditText
                   android:layout_width="match_parent"
                   android:focusable="false"
                   android:id="@+id/editTextStartTime"
                   android:clickable="false"
                   android:hint="Start Time"
                   android:layout_height="wrap_content" />

           </android.support.design.widget.TextInputLayout>

           <android.support.design.widget.TextInputLayout
               android:layout_width="0sp"
               android:layout_weight="1"
               android:layout_height="wrap_content">
               <android.support.design.widget.TextInputEditText
                   android:layout_width="match_parent"
                   android:focusable="false"
                   android:clickable="false"
                   android:id="@+id/editTextEndTime"
                   android:hint="End Time"
                   android:layout_height="wrap_content" />

           </android.support.design.widget.TextInputLayout>
       </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:hint="Order Taken"
                android:focusable="false"
                android:id="@+id/editTextOrderTaken"
                android:clickable="false"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/orderTakenLayout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputLayout
                android:layout_weight="1"
                android:layout_width="0sp"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:hint="Product"
                    android:id="@+id/editTextProduct"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="0sp"
                android:layout_weight="1"
                android:layout_height="wrap_content">
                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:hint="Quantity"
                    android:id="@+id/editTextQuantity"
                    android:focusable="false"
                    android:clickable="false"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:id="@+id/editTextRemark"
                android:hint="Visit Remark"
                android:focusable="false"
                android:clickable="false"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>
        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:hint="Visit Status"
                android:id="@+id/editTextStatus"
                android:focusable="false"
                android:clickable="false"
                android:layout_height="wrap_content" />

        </android.support.design.widget.TextInputLayout>



        <LinearLayout
            android:visibility="gone"
            android:id="@+id/visitStatusLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8sp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Visit Status" />

            <com.toptoche.searchablespinnerlibrary.SearchableSpinner

                android:id="@+id/searchStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:hintText="Default" />
        </LinearLayout>




    </LinearLayout>

</android.support.v4.widget.NestedScrollView>