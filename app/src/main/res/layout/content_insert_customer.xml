<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16sp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.test.nuvoco3.lead.InsertCustomerActivity">


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputEditName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="textCapWords"
            android:nextFocusForward="@+id/textInputEditPhone"
            android:nextFocusDown="@id/textInputEditPhone" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Customer Type" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner

            android:id="@+id/searchType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:hintText="Default" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8sp"
            android:text="Prospect"
            android:textColor="#000000" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Category" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner

            android:id="@+id/searchCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintText="Default" />
    </LinearLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayoutState"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textInputLayoutState"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutState">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputEditPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Phone No. "
            android:nextFocusForward="@+id/textInputEditEmail"
            android:inputType="phone"
            android:maxLength="10"
            android:maxLines="1" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInputLayoutEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/textInputLayoutPhone"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textInputLayoutPhone"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayoutPhone">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/textInputEditEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:nextFocusForward="@+id/textInputEditAddress" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:id="@+id/textInputLayoutAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayoutCategory"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textInputLayoutCategory"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCategory">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditAddress"
                android:gravity="start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:minLines="3" />


        </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select State" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/searchState"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintText="Default" />
    </LinearLayout>

    <!--<android.support.v7.widget.AppCompatSpinner-->
    <!--android:id="@+id/spinnerCategory"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select Area" />

        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/searchArea"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintText="Default" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8sp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Select District" />


        <com.toptoche.searchablespinnerlibrary.SearchableSpinner
            android:id="@+id/searchDistrict"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintText="Default" />
    </LinearLayout>


    <!--To Prevent Glitches-->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40sp" />


</LinearLayout>